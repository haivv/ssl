<%- include('header') %>

    <script>
        function showcheckDelete(client_id) {
            // alert(cat_id);
            var cssID = "checkDelete" + client_id;
            var modal = document.getElementById(cssID);
            modal.style.display = "block";
        }

        function hidecheckDelete(client_id) {
           
            var cssID = "checkDelete" + client_id;
            var modal = document.getElementById(cssID);
            modal.style.display = "none";
          
        }
    </script>




    <!-- Content -->
    <div class="container mt-4 box-heigh1000">
        <h1 class="pt-3"><%= title %></h1>
        <div class="container d-flex justify-content-end">
            <a class="btn btn-primary mb-3 col-2 " href="/admin/patents-certifications-add">
                <i class="fas fa-plus"></i> Add Patents and Certifications
            </a>
        </div>
        <div class="container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th id="client_col1" >No.</th>
                        <th id="client_col2" >Patents and Certification Name</th>
                        <th id="client_col3" >Patents and Certification Image</th>
                      
                        <th id="client_col5" >Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% let num=1; dataPatcer.forEach(function(patcer) { let patcer_id=patcer.patcer_id; %>
                        <tr>
                            <td>
                                <%= num %>
                            </td>
                            <td>
                                <%= patcer.patcer_name %>
                            </td>
                            <td>
                               <img src="/uploads/patcer/<%= patcer.patcer_img   %>" width="70px"/>
                            </td>
                           
                            <td>
                                <a class="btn btn-sm btn-warning" href="/admin/patents-certifications-edit/<%= patcer.patcer_id  %>">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a class="btn btn-sm btn-danger" onclick="showcheckDelete('<%= patcer.patcer_id  %>');">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>

                        <!-- message confirm delete  -->
                        <div id='checkDelete<%= patcer.patcer_id  %>' class='modalmess-content'>
                            <div class=''>
                                <p class="p-5 d-flex ">삭제 확인하세요?</p>
                                <p class="p-3 d-flex flex-row-reverse">
                                    <a href='#' onclick="hidecheckDelete('<%= patcer.patcer_id %>');" class='btn btn-primary '>취소</a>&nbsp;
                                    <a href="/admin/patents-certifications-delete/<%=  patcer.patcer_id  %>" class='btn btn-danger '>확인 </a>
                                </p>
                        </div>
                        <% num++; }); %>
                </tbody>
            </table>
        </div>
        <div class="container">
            <ul class="pagination  justify-content-center">
              <% if(page>=2){ %>
                <li class="page-item"><a class="page-link" id="paging-left" href="/admin/patents-certifications/<%= page-1 %>"> 이전
                  </a>
                </li>
                <% } <!--end if(page>=2)-->
                  <!---mid link-->
                  for(var i=1; i<=total_pages ; i++){ if (i==page) { %>
                    <li class="page-item active"><a class="page-link" id="paging-left" href="/admin/patents-certifications/<%= i %>">
                        <%= i %>
                      </a></li>
                    <% } else{ %>
    
                      <li class="page-item "><a class="page-link" id="paging-left" href="/admin/patents-certifications/<%= i %>">
                          <%= i %>
                        </a></li>
                      <% } }<!--end for-->
    
    
                        if(page < total_pages){page++; %>
    
                          <li class="page-item"><a class="page-link" id="paging-left" href="/admin/patents-certifications/<%= page %>">
                              다음
                            </a></li>
    
                          <% } %>
    
            </ul>
          </div><!--container paging-->
    </div>
    </div>

    <%- include('footer') %>