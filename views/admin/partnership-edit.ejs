<%- include('header') %>
  <script>
    // Add file
    function addFileShow() {

      var modal = document.getElementById("addfile");
      modal.style.display = "block";
    }
    function closeBoxAddfile() {
      var modal = document.getElementById("addfile");
      modal.style.display = "none";
    }

    function hideAddFile() {

      var modal = document.getElementById("addfile");

      modal.style.display = "none";

      var fileInput = document.getElementById('myfile');
      var fileName = fileInput.files[0].name;

      document.getElementById("partner_img").value = fileName;
      document.fsubmitfile.submit();
    }

  </script>
  <style>
    #addfile {
      display: none;
    }

    #myfile_left {
      width: 83%;
      height: 40px;
    }

  </style>

  <!--show box to add file -->
  <div id='addfile' class='messBox'>
    <div class='modalmess-content d-flex flex-column p-4'>
      <div><button class=" btn btn-dark  " onclick='closeBoxAddfile()'>X</button></div>
      <p class="p-2 d-flex txtMess">원하는 이미지를 업로드해주세요. </p>
      <div class="choosefile">
        <form action="/admin/upload_partnership" name="fsubmitfile" method="POST" enctype="multipart/form-data">
          <input type="file" name="myfile" id="myfile" class="inputfile inputfile-6" accept="image/jpeg, image/png">

          <label for="myfile" id="myfile_left"><span id="hidfile1"></span> </label>
          <label for="myfile" id="myfile_select_btn">
            <div class="btnfile" id="fileSelect"> 파일선택</div>
          </label>
          <script src="/javascripts/custom-file-input.js"></script>
      </div>
      <p class="d-flex flex-row-reverse">
        <button class='btn btn-primary mt-3' onclick="hideAddFile()">업로드</button>
        </form>
      </p>
    </div>
  </div>





  <!-- Content -->
  <div class="container mt-4 box-heigh1000">
    <h1 class="pt-3">
      <%= title %>
    </h1>

    <div class="container">
      <table class="table table-striped">
        <thead>
          <!-- <tr>
            
            <th >Username</th>
            <th >Password</th>

          </tr> -->
        </thead>
        <tbody>
          <%  dataPartnership.forEach(function(partnership) { %>
          <form method="post" action="/admin/partnership-proUpdate" >
            <tr>
              <td class="">
                <label for="partner_img">Partner Image</label>
              </td>
              <td class="">

                <span class="input-group-text strSize" id="inputGroup-sizing-default">이미지 &nbsp; <i class="fa fa-upload"
                    style="font-size:18px" onclick="addFileShow()"></i></span>

                    <% 
                    var originalString = partnership.partner_img; 
                    var partner_img2 = originalString.substring(11); 
                  %>
                <input type="text" class="form-control" name="partner_img" id="partner_img" readonly value="<%= partner_img2 %>" >
              </td>
            </tr>

            <tr>
              <td class="">
                <label for="partner_name">Partner Korean name</label>
              </td>
              <td class="">
                <input type="text" placeholder="Type Partner Korean name" class="form-control" id="partner_name" name="partner_name" value="<%= partnership.partner_name %>"
                  required />
              </td>
            </tr>
            <tr>
              <td class="">
                <label for="partner_name_en">Partner English name</label>
              </td>
              <td class="">
                <input type="text" placeholder="Type Partner English name" class="form-control" id="partner_name_en" name="partner_name_en" value="<%= partnership.partner_name_en %>"
                  required />
              </td>
            </tr>
            <tr style="border-bottom:1px solid red !important">
              <td class="">
                <label for="partner_name_ja">Partner Japanese name</label>
              </td>
              <td class="">
                <input type="text" placeholder="Type Partner Japanese name" class="form-control" id="partner_name_ja" name="partner_name_ja" value="<%= partnership.partner_name_ja %>"
                  required />
              </td>
            </tr>
            <!-- project -->
            <tr >
              <td class="">
                <label for="partner_project">Partner Korean Project</label>
              </td>
              <td class="">
                <input type="text" placeholder="Type Partner Korean Project" class="form-control" id="partner_project" name="partner_project" value="<%= partnership.partner_project %>"
                  required />
              </td>
            </tr>
            <tr >
              <td class="">
                <label for="partner_project_en">Partner English Project</label>
              </td>
              <td class="">
                <input type="text" placeholder="Type Partner English Project" class="form-control" id="partner_project_en" name="partner_project_en" value="<%= partnership.partner_project_en %>"
                  required />
              </td>
            </tr>
            <tr style="border-bottom:1px solid red !important">
              <td class="">
                <label for="partner_project_ja">Partner Japanese name</label>
              </td>
              <td class="">
                <input type="text" placeholder="Type Partner English Project" class="form-control" id="partner_project_ja" name="partner_project_ja" value="<%= partnership.partner_project_ja %>"
                  required />
              </td>
            </tr>
            <!-- detail -->
            <tr >
              <td class="">
                <label for="partner_detail">Partner Korean Detail</label>
              </td>
              <td class="">
                <input type="text" placeholder="Type Partner English Detail" class="form-control" id="partner_detail" name="partner_detail" value="<%= partnership.partner_detail %>"
                  required />
              </td>
            </tr>
            <tr >
              <td class="">
                <label for="partner_detail_en">Partner English Detail</label>
              </td>
              <td class="">
                <input type="text" placeholder="Type Partner English Detail" class="form-control" id="partner_detail_en" name="partner_detail_en" value="<%= partnership.partner_detail_en %>"
                  required />
              </td>
            </tr>
            <tr style="border-bottom:1px solid red !important">
              <td class="">
                <label for="partner_detail_ja">Korean Japanese Detail</label>
              </td>
              <td class="">
                <input type="text" placeholder="Type Korean Japanese Detail" class="form-control" id="partner_detail_ja" name="partner_detail_ja" value="<%= partnership.partner_detail_ja %>"
                  required />
              </td>
            </tr>

           

            <tr>
              <td colspan="2">
                <span class="error" id="repasserr"> </span>
                <input type="hidden" name="partner_id" value="<%= partnership.partner_id %>"/>
                <input type="hidden" name="partner_db_img" value="<%= partnership.partner_img %>"/>

                <input type="submit" class="btn btn-primary  mt-3 btnSize" value="Submit">
                <a class="btn btn-danger mt-3" href="/admin/patents-certifications">
                  <i class="fas fa-times"></i> Cancel
                </a>

              </td>
            </tr>


          </form>
          <% }); %>

        </tbody>
      </table>
    </div>

  </div>
  </div>

  <%- include('footer') %>