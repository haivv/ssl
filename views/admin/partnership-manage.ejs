<%- include('header') %>

    <script>
        function showcheckDelete(client_id) {
            // alert(cat_id);
            var cssID = "checkDelete" + client_id;
            var modal = document.getElementById(cssID);
            modal.style.display = "block";
        }

        function hidecheckDelete(client_id) {
           
            var cssID = "checkDelete" + client_id;
            var modal = document.getElementById(cssID);
            modal.style.display = "none";
          
        }
    </script>




    <!-- Content -->
    <div class="container mt-4 box-heigh1000">
        <h1 class="pt-3"><%= title %></h1>
        <div class="container d-flex justify-content-end">
            <a class="btn btn-primary mb-3 col-2 " href="/admin/partnership-add">
                <i class="fas fa-plus"></i> Add Partnership
            </a>
        </div>
        <div class="container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th id="client_col1" >No.</th>
                        <th id="client_col2" >Partner Name</th>
                        <th id="client_col3" >Partner Image</th>
                      
                        <th id="client_col5" >Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% let num=1; dataPartnership.forEach(function(partnership) { let partner_id=partnership.partner_id; %>
                        <tr>
                            <td>
                                <%= num %>
                            </td>
                            <td>
                                <%= partnership.partner_name %>
                            </td>
                            <td>
                               <img src="/uploads/partnership/<%= partnership.partner_img   %>" width="70px"/>
                            </td>
                           
                            <td>
                                <a class="btn btn-sm btn-warning" href="/admin/partnership-edit/<%= partnership.partner_id  %>">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a class="btn btn-sm btn-danger" onclick="showcheckDelete('<%= partnership.partner_id  %>');">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>

                        <!-- message confirm delete  -->
                        <div id='checkDelete<%= partnership.partner_id  %>' class='modalmess-content'>
                            <div class=''>
                                <p class="p-5 d-flex ">삭제 확인하세요?</p>
                                <p class="p-3 d-flex flex-row-reverse">
                                    <a href='#' onclick="hidecheckDelete('<%= partnership.partner_id %>');" class='btn btn-primary '>취소</a>&nbsp;
                                    <a href="/admin/partnership-delete/<%=  partnership.partner_id  %>" class='btn btn-danger '>확인 </a>
                                </p>
                        </div>
                        <% num++; }); %>
                </tbody>
            </table>
        </div>
        
    </div>
    </div>

    <%- include('footer') %>