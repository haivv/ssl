<%- include('header') %>
    <style>
        .popup-container {
            padding: 30px
        }
    </style>
    <script>
        function showVideoPage() {

            document.getElementById('popup').style.display = 'block';
        }

        function closeVideo() {

            document.getElementById('popup').style.display = 'none';
        }
    </script>
    <% dataProduct.forEach(function(product) { %>
        <div class="menu-tag simg-body4 simg-gray400"><a class="index-tag  simg-gray500" href="/en/">Home</a> > <a
                class="aboutUs-tag" href="#">
                <% if(product.cat_id==1){%>
                    Heavy Equipment Simulator
                    <% }else if(product.cat_id==2){ %>
                        Safety Training/Accident Experience
                        <% }else if(product.cat_id==3){ %>
                            Manufacturing
                            <% }else if(product.cat_id==4){ %>
                                Shipbuilding Industry
                                <% }else { %>
                                    Culture/Tourism
                                    <%}%>
            </a> > <a class="aboutUs-tag" href="#">
                <%= product.pro_title_en %>
            </a></div>
        </div>

        <section class="product-container">
            <div class="product-page">
                <div class="product-image-area">
                    <!-- <img id="" src="/public/uploads/product/2024-07-24_HeaEquSim_ExcSim2.jpg.jpg" alt="here"> -->
                    <div id="service" style="padding:0px 20px">
                        <% if (product.pro_img1.length> 11){%>
                            <img src="/public/uploads/product/<%= product.pro_img1%>" />
                            <% }else if(product.pro_img2.length> 11){%>
                                <img src="/public/uploads/product/<%= product.pro_img2%>" />
                                <% }else if(product.pro_img3.length> 11){%>
                                    <img src="/public/uploads/product/<%= product.pro_img3%>" />
                                    <% }else if(product.pro_img4.length> 11){%>
                                        <img src="/public/uploads/product/<%= product.pro_img4%>" />
                                        <% }else {%>
                                            <img src="/public/uploads/product/<%= product.pro_img5%>" />
                                            <% }%>
                    </div>

                </div>

                <div class="product-info-area">
                    <div class="simg-title2 text-center simg-black">
                        <%= product.pro_title_en %>
                    </div>
                    <% if(product.type_classify=='on' ){%>
                        <div class="product-info-model">
                            <div class="product-info-model-title simg-title4 text-left">Models</div>
                            <div class="product-info-model-list">
                                <% var dem=0; if (product.pro_img1.length> 11){ %>
