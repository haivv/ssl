<%- include('header') %>

<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<style>
    
    .detail-news-introduce img {
        display: block;
        margin: auto;
        max-width: 100%;
        max-height: 100%;
    }
   
</style>

    <div class="menu-tag simg-body4 simg-gray400 "><a class="index-tag  simg-gray500" href="/">홈</a> > <a
            class="aboutUs-tag" href="/news">뉴스</a></div>
    <section class="latest-news-detail-container">
        <!-- <div class="latest-news-detail-content"> -->


            <% dataNews.forEach(function(news) { let cat_id=news.news_id; %>
                <div class="detail-news-title simg-title1 text-left simg-black"> 
                    <!-- <div class="detail-news-title simg-title1 text-left simg-black"> -->
                    <%= news.news_title%>
                </div>
                <div class="detail-news-upload-date simg-body3 text-left simg-gray500">발행일 <%= news.news_date%>
                </div>
                <img  width="100%" src="/public/uploads/news/<%= news.news_cover_image %>">

                <div class="detail-news-introduce simg-body2  simg-black">
                    <br>
                    <!-- <div class="detail-news-introduce simg-body2 text-left simg-black"></div> -->
                    <%- news.news_content%> 
                </div>

                <% }); %>
                  

    </section>


    <style>
        .pagination .page-item.active .page-link {
            color: white !important;
            background: #ccc;
        }

        .latest-news-info {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            height: 230px;
            padding: 10px;
        }

        /* .latest-news-info p {
            margin: 5px 0;
        } */
    </style>

    <div id="simg-templete-footer"><%- include('footer') %></div>